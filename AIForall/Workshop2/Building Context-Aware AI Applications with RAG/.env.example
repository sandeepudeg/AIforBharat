# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Bedrock Configuration
BEDROCK_EMBEDDING_MODEL=amazon.titan-embed-text-v2:0
BEDROCK_GENERATION_MODEL=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_RERANKING_MODEL=cohere.rerank-v3-5:0

# Knowledge Base Configuration
KB_NAME=bedrock-rag-kb
KB_DESCRIPTION=Bedrock RAG Knowledge Base for document retrieval

# OpenSearch Serverless Configuration
OSS_COLLECTION_NAME=bedrock-rag-collection
OSS_INDEX_NAME=bedrock-rag-index

# S3 Configuration
S3_BUCKET_NAME=bedrock-rag-documents
S3_REGION=us-east-1

# Ingestion Configuration
CHUNK_SIZE=1024
CHUNK_OVERLAP=20
MAX_RETRIEVAL_RESULTS=5

# Logging Configuration
LOG_LEVEL=INFO
